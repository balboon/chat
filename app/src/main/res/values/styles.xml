<resources>
    <!-- Base application theme. -->
    <style name="SpontivlyTheme" parent="SuperAppTheme">
        <!-- Customize your theme here. -->

    </style>

    <style name="SuperAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for all Pre-Lollipop and Lollipop above versions (ALL DEVICES) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item> <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@android:color/white</item> <!-- Color of Overflow Menu, 3 dots icon -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="SpontivlyTheme.Launcher">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@layout/launch_screen</item>
    </style>
</resources>
